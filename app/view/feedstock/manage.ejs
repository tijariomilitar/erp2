<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<% include ./../partials/header %>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<form id="feedstock-create-form" class="box b2 container ground border padding-10">
					<div class="box b1 underline center margin-top-10">Cadastrar Matéria Prima</div>
					<input type="hidden" name="id" value="0" autocomplete="off">
					<input type="number" name="feedstock_code" min="1" max="9999" class="box b4 input-generic center margin-top-5" placeholder="Código" autocomplete="off">
					<input type="text" name="name" class="box b2 input-generic center margin-top-5" placeholder="Nome da matéria-prima" autocomplete="off" maxlength="20">
					<select name="color" class="box b4 input-generic center margin-top-5">
						<option value="">Cor</option>
						<% for(i in feedstockColors){ %>
							<option value="<%= feedstockColors[i].shortcut %>"><%= feedstockColors[i].name %></option>
						<% } %>
					</select>
					<br>
					<input type="number" name="standard" class="box b3 input-generic center margin-top-5" placeholder="Padrão" min="1" max="99999" autocomplete="off">
					<select name="uom" class="box b3 input-generic center margin-top-5">
						<option value="">Un de Medida</option>
						<option value="cm">Centímetros</option>
						<option value="un">Unidade</option>
					</select>
					<input type="submit" name="submit" class="box b3 submit-generic margin-top-5 center" value="Cadastrar">
				</form>
				<div class="box b2 padding-10 border">
					<form id="feedstock-filter-form" class="box b1 container ground">
						<input type="hidden" name="location" value="feedstockAdmin">
						<input type="text" name="feedstock_code" class="box b6 input-generic center" placeholder="Cód" autocomplete="off">
						<input type="text" name="name" class="box b3 input-generic center" placeholder="Nome" autocomplete="off">
						<select name="color" class="box b6 input-generic center">
							<option value="">Cor</option>
							<% for(i in feedstockColors){ %>
								<option value="<%= feedstockColors[i].shortcut %>"><%= feedstockColors[i].name %></option>
							<% } %>
						</select>
						<input type="submit" id="feedstock-filter-submit" class="box b3 submit-generic center" value="Filtrar">
					</form>
					<div id="feedstock-admin-filter-div" class="box b1 margin-top-5" style="display:none">
						<table class="tbl-info box b1" id="feedstock-admin-filter-tbl"></table>
						<br>
						<button id="feedstockAdminPrevious" autocomplete="off" disabled>&lsaquo;&lsaquo;</button>
	                    <span id="feedstockAdminPageNumber"></span>
	                    <button id="feedstockAdminNext" autocomplete="off" disabled>&rsaquo;&rsaquo;</button>
					</div>
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
	</footer>
</html>