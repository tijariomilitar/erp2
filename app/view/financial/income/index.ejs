<html>
	<head>
        <% include ./../../partials/head %>
	</head>
	<body>
		<% include ./../../partials/header %>
        <% include ./../../partials/nav %>
		<section class="container">
			<div class="box b2 container ground border padding-10 margin-top-5">
				<form id="income-category-create-form" class="box b1 container center">
	            	<div class="box b1 em08 georgia bold underline center">Cadastrar Categoria de Receita</div>
					<input type="hidden" name="id" value="" autocomplete="off">
					<input type="text" name="name" class="box b2-3 input-generic margin-top-5 center" placeholder="Nome da categoria" autocomplete="off" maxlength="100">
					<input type="submit" class="box b3 submit-generic margin-top-5 center" id="financial-income-category-create-submit" value="Cadastrar">
				</form>
				<div id="income-category-filter-box" class="box b1 container ground border padding-10 margin-top-10">
	            	<div class="box b1 em08 georgia bold underline center">Filtrar Categorias de Receita</div>
	                <form id="income-category-filter-form" class="box b1 container">
						<input type="text" name="name" class="box b2-3 input-generic center margin-top-5" placeholder="Nome da categoria" autocomplete="off">
						<input type="submit" name="submit" class="box b3 submit-generic center margin-top-5" value="Filtrar">
	                </form>
	                <div id="income-category-filter-div" class="box b1 ground avant-garde margin-top-10"></div>
	                <% include ./../../partials/carousel %>
	            </div>
			</div>

			<div id="income-category-show-box" class="box b2 container ground border padding-5 margin-top-5" style="display:none">
				<div id="income-category-show-title" class="box b1 underline container padding-5 margin-top-5"></div>
				<form id="income-origin-create-form" class="box b1 container center">
	            	<div class="box b1 em08 georgia bold underline center">Cadastrar Origem de Receita</div>
					<input type="hidden" name="id" value="" autocomplete="off">
					<input type="hidden" name="category-id" value="" autocomplete="off">
					<input type="text" name="name" class="box b2-3 input-generic margin-top-5 center" placeholder="Nome da categoria" autocomplete="off" maxlength="100">
					<input type="submit" class="box b3 submit-generic margin-top-5 center" id="financial-income-origin-create-submit" value="Cadastrar">
				</form>
				<div id="income-origin-filter-box" class="box b1 container ground border padding-10 margin-top-10">
	            	<div class="box b1 em08 georgia bold underline center">Filtrar Origens de Receita</div>
	                <form id="income-origin-filter-form" class="box b1 container">
						<input type="hidden" name="category-id" value="" autocomplete="off">
						<input type="text" name="name" class="box b2-3 input-generic center margin-top-5" placeholder="Nome da categoria" autocomplete="off">
						<input type="submit" name="submit" class="box b3 submit-generic center margin-top-5" value="Filtrar">
	                </form>
	                <div id="income-origin-filter-div" class="box b1 ground avant-garde margin-top-10"></div>
	                <% include ./../../partials/carousel %>
	            </div>
			</div>
		</section>
        <% include ./../../partials/loader %>
	</body>
	<footer>
        <% include ./../../partials/footer %>
        <% include ./../partial %>
        <% include ./partial %>
	</footer>
</html>